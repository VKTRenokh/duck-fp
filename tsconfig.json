{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "->/*": [
        "./src/*"
      ],
      "-->": [
        "./src/index.ts"
      ],
      "->t/*": [
        "./src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "@types/bun"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "jest.config.ts"
  ]
}
